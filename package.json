{
  "name": "babel-plugin-postcss-css-modules",
  "version": "1.2.0",
  "scripts": {
    "prepublish": "yarn build",
    "build": "babel src -d lib --source-maps",
    "lint": "standard --fix",
    "test": "BABEL_ENV=coverage nyc mocha",
    "mocha": "mocha"
  },
  "keywords": [
    "babel",
    "babel-plugin",
    "css-modules",
    "postcss",
    "transform"
  ],
  "description": "For css modules by babel & postcss",
  "main": "lib/index.js",
  "repository": "git@github.com:teabyii/babel-plugin-postcss-css-modules",
  "author": "teabyii <teabyii@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "fs-extra": "^7.0.1",
    "postcss": "^7.0.14",
    "postcss-load-config": "^2.0.0",
    "postcss-modules": "^1.4.1",
    "string-hash": "^1.1.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/register": "^7.4.0",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "babel-plugin-istanbul": "^5.1.1",
    "chai": "^4.2.0",
    "chai-string": "^1.5.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "sinon": "^7.3.0",
    "standard": "^12.0.1"
  },
  "files": ["lib/*"],
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "coverage/**",
      "lib/**"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false
  },
  "standard": {
    "ignore": [
      "/lib",
      "/**/fixtures"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ]
  }
}
